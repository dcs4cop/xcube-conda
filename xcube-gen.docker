ARG XCUBE_VERSION

FROM quay.io/bcdev/xcube:${XCUBE_VERSION}

ARG XCUBE_VERSION
ARG XCUBE_DOCKER_VERSION
ARG XCUBE_GEN_VERSION
ARG XCUBE_USER_NAME

LABEL maintainer="helge.dzierzon@brockmann-consult.de"
LABEL name=XCUBE
LABEL xcube_version=${XCUBE_VERSION}

RUN echo "Building docker using args:"
RUN echo "XCUBE_VERSION:${XCUBE_VERSION}"

USER ${XCUBE_USER_NAME}

RUN git clone https://github.com/dcs4cop/xcube-gen
RUN source activate xcube && pip install .

EXPOSE 8000

